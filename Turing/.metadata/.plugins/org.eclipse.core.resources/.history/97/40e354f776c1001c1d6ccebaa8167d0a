package it.beije.turing.db;


import org.hibernate.query.Query;

import java.util.List;

import org.hibernate.Session;

import it.beije.turing.rubrica.Contatto;

public class Hibernate {
	public static void main(String[] args) {
		Session session = null;
		
		try {
			session = HBsessionFactory.openSession();
			System.out.println("is session open: "+ session.isOpen());
			
			//INSERT
//			Contatto contatto = new Contatto();
//			contatto.setNome("federico");
//			contatto.setCognome("R");
//			contatto.setEmail("fede.r@gmail.com");
//			contatto.setTelefono("0682829");
//			contatto.setNote("amico");
//			
//			session.save(contatto);
			
			//SELECT
			Query <Contatto> query = session.createQuery("SELECT c FROM contatto AS c"); //SELECT * FROM contatti
			
			List<Contatto> contatti = query.getResultList();
			
			Contatto contatto = null;
			for (Contatto c : contatti) {
				System.out.println(c);
				if (c.getId() == 12) contatto = c;
			}
			
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
	}
	

}
